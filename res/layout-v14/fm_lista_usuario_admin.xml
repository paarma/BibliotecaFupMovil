<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_frame_usuarios_admin">

    <GridLayout
        android:id="@+id/barraMenuUsuariosAdmin"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/list_divider"
        android:columnCount="16"
        android:rowCount="2"
        android:paddingTop="4dp">

        <!-- Boton uno -->
        <GridLayout
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="1"
            android:clickable="true">

            <ImageButton
                android:id="@+id/btnBuscarUsuarioAdmin"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:src="@drawable/abs__ic_search"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:onClick="verBuscarUsuarioAdmin"/>

            <TextView
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:textColor="@color/blanco"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="@drawable/drawer_shadow"/>

        </GridLayout>

        <!-- Boton dos -->
        <GridLayout
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="1"
            android:clickable="true">

            <ImageButton
                android:id="@+id/btnActualizarUsuarioAdmin"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mode_edit_white_48dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:onClick="actualizarUsuarioAdmin"/>

            <TextView
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:textColor="@color/blanco"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="@drawable/drawer_shadow"/>

        </GridLayout>

        <!-- Boton tres -->
        <GridLayout
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="1"
            android:clickable="true">

            <ImageButton
                android:id="@+id/btnReporteUserAdmin"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_assessment_white_48dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:textColor="@color/blanco"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="@drawable/drawer_shadow"/>

        </GridLayout>

        <!-- Boton cuatro -->
<!--        <GridLayout
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="1"
            android:clickable="true">

            <ImageButton
                android:id="@+id/btnRefrescarUsuariosAdmin"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_autorenew_white_48dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:textColor="@color/blanco"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="@drawable/drawer_shadow"/>

        </GridLayout>-->

    </GridLayout>

    <TextView
        android:id="@+id/displaying"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textSize="13sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewUsuariosAdmin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/barraMenuUsuariosAdmin"
        android:choiceMode="singleChoice"
        android:layout_marginTop="25dp"
        android:divider="@drawable/horizontal_divider"/>

</RelativeLayout>