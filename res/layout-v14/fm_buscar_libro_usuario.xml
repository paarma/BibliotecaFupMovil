<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_frame_buscar_libros_user">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/FragmentBuscarLibros"
        android:id="@+id/textView5" />

    <GridLayout
        android:id="@+id/barraMenuResesrvaUser"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/counter_text_bg"
        android:columnCount="16"
        android:rowCount="2"
        android:paddingTop="4dp">

        <!-- Boton uno -->
        <GridLayout
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="1"
            android:clickable="true"
            android:layout_row="0"
            android:layout_column="0">

            <ImageButton
                android:id="@+id/btnAceptarBusquedaLibroUser"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:src="@drawable/abs__ic_search"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:onClick="buscarLibroUser"/>

            <TextView
                android:text="@string/buscar"
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:textColor="@color/blanco"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:layout_height="match_parent"
                android:textAlignment="gravity"
                android:textColor="@color/blanco"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="@drawable/drawer_shadow"/>

        </GridLayout>

    </GridLayout>

</RelativeLayout>