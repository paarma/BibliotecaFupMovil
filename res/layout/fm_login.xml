    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="fill_parent"  android:padding="10dip"
        android:weightSum="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fup"
            android:layout_weight="0.15" />

        <TextView android:id="@+id/link_to_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:gravity="center"
            android:textSize="20dip"
            android:textColor="#0b84aa"
            android:text="Biblioteca Fup" />

        <EditText android:id="@+id/tbxUsuario" android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:hint="Codigo"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_person_white_24dp"/>

        <EditText android:id="@+id/tbxClave" android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:hint="Password" android:inputType="textPassword"
            android:layout_marginTop="15dip" android:layout_marginBottom="20dip"
            android:drawableLeft="@drawable/ic_https_white_24dp"/>


        <Button android:id="@+id/btnLogin" android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Aceptar"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:onClick="login"
            android:enabled="true"
            android:background="@drawable/btn_default" />

        <TextView android:id="@+id/login_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="40dip"
            android:gravity="center"
            android:textSize="20dip" />

        </LinearLayout>
        </ScrollView>

    </LinearLayout>



